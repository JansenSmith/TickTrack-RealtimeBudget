<resources>

    <style name="SplashTheme" parent="DarkTheme">
        <item name="android:windowBackground">@drawable/button_selector_accent</item>
    </style>
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="titleEnabled">false</item>
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorSecondary">@color/Accent</item>
        <item name="colorOnSecondary">@color/LightText</item>
        <item name="android:textColorSecondary">@color/Accent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DarkOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/DarkText</item>
        <item name="android:background">@drawable/overflow_menu_light_ripple</item>
        <item name="android:itemBackground">@color/Light</item>

    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/clickable_layout_gray_background</item>
        <item name="android:textColor">@color/LightGray</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="buttonStartup" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="LightOverflow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/LightText</item>
        <item name="android:background">@drawable/overflow_menu_dark_ripple</item>
        <item name="android:itemBackground">@color/GrayOnDark</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="createdDialog">
        <item name="android:windowEnterAnimation">@anim/from_right</item>
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>

    <!--    <style name="cancelDialog">-->
    <!--        <item name="android:windowEnterAnimation">@anim/from_right</item>-->
    <!--    </style>-->

    <style name="acceptDialog">
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>


    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/Accent</item>
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorPrimaryDark">@color/Gray</item>
    </style>

    <style name="DarkNumberPicker">
        <item name="android:textColorPrimary">@color/DarkText</item>
    </style>

    <style name="LightNumberPicker">
        <item name="android:textColorPrimary">@color/LightText</item>
    </style>

    <color name="daysLabelColor">#8A000000</color>
    <color name="currentMonthDayColor">#de000000</color>
    <color name="nextMonthDayColor">#1F000000</color>
    <color name="disabledDialogButtonColor">#1F000000</color>
    <color name="itemHighlightColor">#1F000000</color>
    <color name="itemFocusedColor">#1A000000</color>
    <color name="defaultColor">#2962FF</color>

    <style name="FullscreenTheme" parent="DarkTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/Accent</item>
    </style>

    <style name="ScrollingPagerIndicator">
        <item name="spi_dotColor">@android:color/darker_gray</item>
        <item name="spi_dotSelectedColor">@android:color/darker_gray</item>
        <item name="spi_dotSize">6dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotSpacing">8dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>

</resources>