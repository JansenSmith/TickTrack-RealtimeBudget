<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationCounterCollapsedRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="64dp"
    android:minHeight="30dp">


    <TextView
        android:id="@+id/counterNotificationCollapsedLabelTextView"
        style="@style/NotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center|center_vertical"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/counterNotificationCollapsedValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="TextView"
        android:textColor="@color/Accent"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/counterNotificationCollapsedFlagImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/counterNotificationCollapsedLabelTextView"
        android:layout_alignBottom="@+id/counterNotificationCollapsedLabelTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/counterNotificationCollapsedLabelTextView"
        app:srcCompat="@drawable/ic_flag_blue" />
</RelativeLayout>