<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TrueBlack"
    tools:context=".ui.home.activity.alarm.AlarmCreator">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alarmItemToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">


        <ImageButton
            android:id="@+id/alarmActivityBackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/TrueBlack"
            android:src="@drawable/ic_back_white_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Set an alarm"
            android:textColor="@color/SoftWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/alarmActivityBackButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_white_tick_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alarmBodyConstraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmItemToolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainScrollContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarmChangeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_blue"
                    android:minHeight="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/alarmNextOccurenceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="This alarm will ring tomorrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:animateLayoutChanges="true"/>

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:amPmBackgroundColor="@color/Gray"
                        android:amPmTextColor="@color/SoftWhite"
                        android:headerBackground="@color/Gray"
                        android:numbersBackgroundColor="@color/Gray"
                        android:numbersSelectorColor="@color/TrueAccent"
                        android:numbersTextColor="@color/SoftWhite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/alarmNextOccurenceText" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/repeatBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/alarmChangeButton"
                    android:animateLayoutChanges="true">

                    <ImageButton
                        android:id="@+id/calendarDownButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_white_arrow_down_24" />

                    <ImageButton
                        android:id="@+id/calendarUpButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_white_arrow_up_24" />

                    <TextView
                        android:id="@+id/calendarNextOccurence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Next ring: Wednesday (22 July)"
                        android:textColor="@color/TrueAccent"
                        android:textSize="18sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/repeatText"
                        android:animateLayoutChanges="true"/>

                    <com.theflopguyproductions.ticktrack.ui.utils.datepicker.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:abbreviationsBarColor="@color/Gray"
                        app:abbreviationsLabelsColor="@android:color/white"
                        app:anotherMonthsDaysLabelsColor="@color/Gray"
                        app:daysLabelsColor="@android:color/white"
                        app:disabledDaysLabelsColor="@color/roboto_calendar_circle_1"
                        app:eventsEnabled="false"
                        app:headerColor="@color/TrueBlack"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/repeatText"
                        app:pagesColor="@color/Gray"
                        app:selectionColor="@color/SoftWhite"
                        app:selectionLabelColor="@color/TrueAccent"
                        app:todayLabelColor="@color/TrueAccent"
                        app:type="many_days_picker"
                        android:animateLayoutChanges="true"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/daysRepeatChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/repeatText"
                        android:animateLayoutChanges="true">

                        <ToggleButton
                            android:id="@+id/sundayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="S"
                            android:textOn="S" />

                        <ToggleButton
                            android:id="@+id/mondayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="M"
                            android:textOn="M" />

                        <ToggleButton
                            android:id="@+id/tuesdayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="T"
                            android:textOn="T" />

                        <ToggleButton
                            android:id="@+id/wednesdayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="W"
                            android:textOn="W" />

                        <ToggleButton
                            android:id="@+id/thursdayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="T"
                            android:textOn="T" />

                        <ToggleButton
                            android:id="@+id/fridayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="F"
                            android:textOn="F" />

                        <ToggleButton
                            android:id="@+id/saturdayToggle"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/circle_toggle_button"
                            android:textAllCaps="false"
                            android:textColor="@color/TrueWhite"
                            android:textOff="S"
                            android:textOn="S" />

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/repeatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Repeat"
                        android:textColor="@color/TrueWhite"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/RepeatDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/Gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/repeatBackground">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ringtoneBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dark_layout_button_default"
                    android:focusable="true"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/RepeatDivider">

                    <TextView
                        android:id="@+id/alarmRingTone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Alarm Ringtone"
                        android:textColor="@color/TrueWhite"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/alarmRingtoneValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="alarmDefaultRingTone"
                        android:textColor="@color/TrueAccent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alarmRingTone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ringtoneDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/Gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ringtoneBackground">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vibrateBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_layout_button_default"
                    android:focusable="true"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ringtoneDivider">

                    <TextView
                        android:id="@+id/alarmVibrateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Vibrate"
                        android:textColor="@color/TrueWhite"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/vibrateCheckBox"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="auto"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarmVibrateDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/Gray"
                    app:layout_constraintTop_toBottomOf="@id/vibrateBackground">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarmLabelBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/dark_layout_button_default"
                    android:focusable="true"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@+id/alarmVibrateDivider">

                    <TextView
                        android:id="@+id/alarmLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:autoText="true"
                        android:inputType="textPersonName"
                        android:text="Set an alarm label"
                        android:textColor="@color/TrueAccent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/alarmLabelText" />

                    <TextView
                        android:id="@+id/alarmLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Label"
                        android:textColor="@color/TrueWhite"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarmLabelDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/Gray"
                    app:layout_constraintTop_toBottomOf="@+id/alarmLabelBackground">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarmThemeBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/alarmLabelDivider">

                    <TextView
                        android:id="@+id/alarmThemeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Theme"
                        android:textColor="@color/TrueWhite"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/alarmThemeGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alwaysDrawnWithCache="true"
                        android:animateLayoutChanges="true"
                        android:clickable="true"
                        android:focusable="auto"
                        android:visibility="visible"
                        app:checkedChip="@id/randomTheme"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alarmThemeLabel"
                        app:layout_constraintVertical_bias="0.0"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/defaultAlarmTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:checked="true"
                            android:text="Default" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/nebulaAlarmTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="Nebula"
                            app:chipIcon="@drawable/round_rect_blue" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/vortexAlarmTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="Vortex"
                            app:chipIcon="@drawable/round_rect_green" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/unicornAlarmTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="Unicorn"
                            app:chipIcon="@drawable/round_rect_purple" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/gargantuaAlarmTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:text="Gargantua"
                            app:chipIcon="@drawable/round_rect_black" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>