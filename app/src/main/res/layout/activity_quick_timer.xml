<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quickTimerActivityRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/LightGray"
    tools:context=".widgets.timer.QuickTimerActivity">

    <com.theflopguyproductions.ticktrack.utils.button.TickTrackButton
        android:id="@+id/quickTimerActivityEnableCustomOptionsButton"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_selector_accent"
        android:text="Show Custom QuickTimer Option"
        android:textAllCaps="false"
        android:textColor="@color/LightText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <com.theflopguyproductions.ticktrack.utils.font.MontserratTextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TickTrack QuickTimer"
        android:textColor="@color/Accent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="montserrat_medium_italic"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/quickTimerActivityCustomCreateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickTimerActivityEnableCustomOptionsButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quickTimerActivityQuickOptionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/quickTimerActivityCustomLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/quickTimerActivityOneMinuteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/quickTimerActivityTwoMinuteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:clickable="true"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/quickTimerActivityOneMinuteButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/quickTimerActivityFiveMinuteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:clickable="true"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/quickTimerActivityTwoMinuteButton"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/quickTimerActivityTenMinuteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:clickable="true"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/quickTimerActivityFiveMinuteButton"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quickTimerActivityCustomLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.LightModeNumberPicker
                    android:id="@+id/quickTimerActivityHourPickerLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.LightModeNumberPicker
                    android:id="@+id/quickTimerActivityMinutePickerLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@+id/quickTimerActivityHourPickerLight"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.LightModeNumberPicker
                    android:id="@+id/quickTimerActivitySecondPickerLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/quickTimerActivityMinutePickerLight"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.DarkModeNumberPicker
                    android:id="@+id/quickTimerActivityHourPickerDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.DarkModeNumberPicker
                    android:id="@+id/quickTimerActivityMinutePickerDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@+id/quickTimerActivityHourPickerDark"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.theflopguyproductions.ticktrack.ui.utils.numberpicker.DarkModeNumberPicker
                    android:id="@+id/quickTimerActivitySecondPickerDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/quickTimerActivityMinutePickerDark"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quickTimerActivitySecondText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Seconds"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/quickTimerActivitySecondPickerDark"
                    app:layout_constraintStart_toStartOf="@+id/quickTimerActivitySecondPickerDark"
                    app:layout_constraintTop_toBottomOf="@+id/quickTimerActivitySecondPickerDark"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/quickTimerActivityMinuteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Minutes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/quickTimerActivityMinutePickerDark"
                    app:layout_constraintStart_toStartOf="@+id/quickTimerActivityMinutePickerDark"
                    app:layout_constraintTop_toBottomOf="@+id/quickTimerActivityMinutePickerDark"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/quickTimerActivityHourText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Hours"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/quickTimerActivityHourPickerDark"
                    app:layout_constraintStart_toStartOf="@+id/quickTimerActivityHourPickerDark"
                    app:layout_constraintTop_toBottomOf="@+id/quickTimerActivityHourPickerDark"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.theflopguyproductions.ticktrack.utils.button.TickTrackButton
        android:id="@+id/quickTimerActivityCustomCreateButton"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_accent"
        android:text="Start QuickTimer"
        android:textColor="@color/LightText"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/quickTimerActivityCancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.theflopguyproductions.ticktrack.utils.button.TickTrackButton
        android:id="@+id/quickTimerActivityCancelButton"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_light"
        android:text="Cancel"
        android:textColor="@color/Accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>